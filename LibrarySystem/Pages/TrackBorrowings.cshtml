<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Track Book Borrowings</h1>
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h2 class="h5 mb-0">Record Borrowing or Return</h2>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="AddBorrow">
                    <div class="mb-3">
                        <label for="bookId" class="form-label">Book ID</label>
                        <input type="number"  class="form-control" asp-for="@Model.BorrowData.BookId" required />
                        <span class="text-danger" asp-validation-for="@Model.BorrowData.BookId"></span>
                    </div>

                    <div class="mb-3">
                        <label for="userId" class="form-label">User ID</label>
                        <input type="number"  class="form-control" asp-for="@Model.BorrowData.UserId" required />
                        <span class="text-danger" asp-validation-for="@Model.BorrowData.UserId"></span>
                    </div>

                    <div class="mb-3">
                        <label for="borrowDate" class="form-label">Borrow Date</label>
                        <input type="date"  class="form-control" asp-for="@Model.BorrowData.BorrowDate" required />
                        <span class="text-danger" asp-validation-for="@Model.BorrowData.BorrowDate"></span>
                    </div>

                    <div class="mb-3">
                        <label for="dueDate" class="form-label">Due Date</label>
                        <input type="date"  class="form-control" asp-for="@Model.BorrowData.DueDate" required />
                        <span class="text-danger" asp-validation-for="@Model.BorrowData.DueDate"></span>
                    </div>

                    <div class="mb-3">
                        <label for="borrowStatus" class="form-label">Borrow Status</label>
                        <input type="text"  class="form-control" asp-for="@Model.BorrowData.BorrowStatus" required />
                        <span class="text-danger" asp-validation-for="@Model.BorrowData.BorrowStatus"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
        </div>
