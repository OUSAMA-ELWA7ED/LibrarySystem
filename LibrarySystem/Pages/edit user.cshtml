@page
@model LibrarySystem.Pages.edit_userModel
@{<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center mb-4">
            <h1>Edit User Information</h1>
        </div>
    </div>

    <form  class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="UserName" class="form-label">Username</label>
                <input type="text" id="UserName" name="UserName" class="form-control" value="@Model.User.UserName" required>
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="Email" name="Email" class="form-control" value="@Model.User.Email" required>
            </div>
            <div class="mb-3">
                <label for="ID" class="form-label">ID</label>
                <input type="text" id="ID" name="ID" class="form-control" value="@Model.User.ID" required>
            </div>
         
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
}
