@page
@model LibrarySystem.Pages.ManageBooksModel
@{
    ViewData["Title"] = "Manage Books";
}

<div class="container mt-4">
    <h1>Manage Books</h1>

    <div class="card mb-4">
        <div class="card-header">Add New Book</div>
        <div class="card-body">
            <form method="post" asp-page-handler="AddBook">
                <div class="mb-3">
                    <label for="BookID" class="form-label">Book ID</label>
                    <input type="text" class="form-control" asp-for="@Model.bookData.Id" />
                    <span class="text-danger" asp-validation-for="@Model.bookData.Id"></span>
                </div>
                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input type="text" class="form-control" asp-for="@Model.bookData.Name" />
                    <span class="text-danger" asp-validation-for="@Model.bookData.Name"></span>
                </div>
                <div class="mb-3">
                    <label for="AuthorID" class="form-label">Author ID</label>
                    <input type="text" class="form-control" asp-for="@Model.bookData.AuthorId" />
                    <span class="text-danger" asp-validation-for="@Model.bookData.AuthorId"></span>
                </div>
                <div class="mb-3">
                    <label for="Author" class="form-label">Author Name</label>
                    <input type="text" class="form-control" asp-for="@Model.bookData.Publisher" />
                    <span class="text-danger" asp-validation-for="@Model.bookData.Publisher"></span>
                </div>
                <div class="mb-3">
                    <label for="AvailableCopies" class="form-label">Available Copies</label>
                    <input type="number" class="form-control" asp-for="@Model.bookData.AvailableCopies" />
                    <span class="text-danger" asp-validation-for="@Model.bookData.AvailableCopies"></span>
                </div>
                <div class="mb-3">
                    <label for="LocationID" class="form-label">Location ID</label>
                    <input type="text" class="form-control" asp-for="@Model.bookData.LocationId" />
                    <span class="text-danger" asp-validation-for="@Model.bookData.LocationId"></span>
                </div>
                <div class="mb-3">
                    <label for="CategoryID" class="form-label">Category ID</label>
                    <input type="text" class="form-control" asp-for="@Model.bookData.CategoryId" />
                    <span class="text-danger" asp-validation-for="@Model.bookData.CategoryId"></span>
                </div>
                <button type="submit" class="btn btn-primary">Add Book</button>
            </form>
        </div>
    </div>




    <div class="card mb-4">
      <div class="card-header">Books List</div>
       <div class="card-body">
         <table class="table">
           <thead>
             <tr> <th>Title</th>   <th>Author</th>    <th>Genre</th>  <th>Availability</th>   <th>Actions</th> </tr>
           </thead>

                <tbody>
                    
                </tbody>
            </table>
        </div>
    </div>
    <a href="/Books" class="btn btn-link">View All Books</a>
</div>
